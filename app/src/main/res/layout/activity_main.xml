<?xml version="1.0" encoding="utf-8"?>
<com.my.qiushibaike.widgets.PagerEnabledSlidingPaneLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        tools:context="com.my.qiubaiui.MainActivity"
        >

        <android.support.design.widget.NavigationView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|start"
                app:menu="@menu/navigation"
                app:headerLayout="@layout/menu_header"
                app:itemTextAppearance="?android:textAppearanceMedium"
                android:id="@+id/menu"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                >

                <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabTextColor="#000"
                        app:tabSelectedTextColor="#FDB801"
                        app:tabBackground="@color/colorPrimaryDark"
                        app:tabMode="scrollable"
                        app:tabIndicatorColor="#FDB801"
                        android:id="@+id/tab"
                        />

                <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pager"
                        />

        </LinearLayout>

</com.my.qiushibaike.widgets.PagerEnabledSlidingPaneLayout>

